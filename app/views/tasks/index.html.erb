<h1> task index </h1>

<% @tasks.each do |task| %>
Task Name: <%= task.task_name %><br>
Project ID: <%= task.project_id %><br>
User ID: <%= task.user_id %><br>
<%= link_to 'Show', task_path(task), :class => 'btn btn-light btn-sm'%><br>
<%= link_to 'Edit', edit_task_path(task), :class => 'btn btn-light btn-sm' %><br>
<%= button_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
<% end %>
