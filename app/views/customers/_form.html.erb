<%= render 'shared/errors', object: customer %>

<%= form_with(model: customer, local: true) do |form| %>
  <div class="field">
    <%= form.label :company %>
    <%= form.text_field :company, id: :customer_company %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :customer_address %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, id: :customer_city %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state, id: :customer_state %>
  </div>

  <div class="field">
    <%= form.label :zip %>
    <%= form.text_field :zip, id: :customer_zip %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
