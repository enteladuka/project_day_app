<%= form_for(@customer, as: :customer, url: customers_path, html: {class: "new_customer", id: "new_customer"}) do |f| %>

  <div class="form-group">
    <%= f.label :company %>
    <%= f.text_field(:company, {:class => 'form-control', :placeholder => 'Enter Company'}) %>
    <%= display_error(@customer, :company) %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field(:address, {:class => 'form-control', :placeholder => 'Enter Address'}) %>
    <%= display_error(@customer, :address) %>
  </div>

  <div class="form-row">
    <div class ="form-group col-md-6">
      <%= f.label :city %>
      <%= f.text_field(:city, {:class => 'form-control', :placeholder => 'Enter City'}) %>
      <%= display_error(@customer, :city) %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :state %>
      <%= f.select(:state, options_for_select(us_states), {}, {:class => 'form-control'}) %>
      <%= display_error(@customer, :state) %>
    </div>

    <div class="form-group col-md-2">
      <%= f.label :zip %>
      <%= f.text_field(:zip, {:class => 'form-control', :placeholder => 'Enter Zip'}) %>
      <%= display_error(@customer, :zip) %>
    </div><br>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary btn-block" %>
  </div>

<% end %>
